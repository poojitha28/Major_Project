<% if @id == "B.Tech" or @id == "M.Tech" %>
<div class="breadcrumb flat no-print">
  <a href="/">Home</a></li>
  <a href="/program">Program</a></li>
  <a href="#" class="active">Questions</a>
</div>
<% else %>
  <div class="breadcrumb flat">
    <a href="/">Home</a>
    <a href="/course">Course</a>
    <a href="/course/<%= @question_group.category %>">Survey</a>
  <a href="#" class="active">Questions</a>
</div>
<% end %>

<h2>
  <%= @question_group.name %> Survey Questions
  <div class="pull-right">
    <%= link_to "New Question", new_question_group_question_path(@question_group),  class: "btn btn-primary" %>
  </div>
</h2>
<hr/>
<table class="table table-striped table-bordered">
  <colgroup>
    <col></col>
    <col width="250"></col>
  </colgroup>
  <thead>
    <tr>
      <th>Question</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "question", collection: @questions %>
  </tbody>
</table>