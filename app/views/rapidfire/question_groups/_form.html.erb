<h3>
  <%= question_group.new_record? ? "New Survey" : "Edit Survey" %>
</h3>
<%= simple_form_for question_group do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: [ ["1st Semester","1-1"],["2nd Semester","1-2"],["3rd Semester","2-1"],["4th Semester","2-2"],["5th Semester","3-1"],["6th Semester","3-2"],["7th Semester","4-1"],["8th Semester","4-2"],["B.Tech","B.Tech"],["M.Tech","M.Tech"] ], label: "Category", prompt: "Please select" %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
